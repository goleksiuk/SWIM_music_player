<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <ImageView
                android:contentDescription="@string/description_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/image"
                android:layout_marginTop="@dimen/global_margin"/>

        <LinearLayout
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_margin">
            
            <TextView
                    android:id="@+id/elapsed_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_default" />

            <SeekBar
                    android:id="@+id/position_SB"
                    android:layout_width="@dimen/seek_bar_width"
                    android:layout_height="wrap_content" />

            <TextView
                    android:id="@+id/remain_TV"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/time_default" />
        </LinearLayout>

        <ImageButton
                android:id="@+id/playPause_BT"
                android:contentDescription="@string/description_default"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/play"
                android:layout_marginTop="@dimen/global_margin" />

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/global_margin" >

            <ImageView
                    android:contentDescription="@string/description_default"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/sound" />

            <SeekBar
                    android:id="@+id/volume_SB"
                    android:layout_width="@dimen/seek_bar_width"
                    android:layout_height="wrap_content"
                    android:progress="50"/>

            <ImageView
                    android:contentDescription="@string/description_default"
                    android:layout_width="@dimen/icon_size"
                    android:layout_height="@dimen/icon_size"
                    android:src="@drawable/sound2" />
        </LinearLayout>
</LinearLayout>